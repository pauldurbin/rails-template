<div class="sortable_tree_wrapper">
  <ol class="sortable_tree" data-sortable-url="<%= options[:sort_url] %>" data-max-levels="<%= (options[:max_levels] || 5) %>">
    <%- items.each do |element| %>
      <li id="cat_<%= element.id %>">
        <div class="item">
          <div class="cell left">
            <i class="handle"></i>
          </div>
          <h3 class="cell left">
            <%= element.name %>
          </h3>
          <div class="cell right controls">
            <%- if options.key? :display_controls %>
              <small>
                <%= link_to 'Edit', edit_admin_category_path(id: element.id) %>
                |
                <%= link_to 'Remove', admin_category_path(id: element.id), method: :delete, data: { confirm: 'Are you sure?' } %>
              </small>
            <%- end %>
          </div>
        </div>
      </li>
    <%- end %>
  </ol>
</div>
