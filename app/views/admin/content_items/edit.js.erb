$('.modal .modal-header .modal-title').html("Content items <small>Edit</small>");
$('.modal .modal-body').html("<%= j render 'admin/content_items/shared/edit', content_item: content_item %>");
$('.modal-placeholder').modal({ backdrop: 'static', keyboard: false });

$('[data-provider="summernote"]').each(function() {
  $(this).summernote({
    height: 300,
    toolbar:[
      ['style',['style']],
      ['font',['bold','italic','underline','clear']],
      ['para',['ul','ol','paragraph']],
      ['height',['height']],
      ['table',['table']],
      ['insert',['media','picture','link','hr']],
      ['view',['fullscreen','codeview']],
      ['help',['help']]
    ]
  })
});
